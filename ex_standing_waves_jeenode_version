unsigned char bufferLength = 20;

char frontOrBack = 1;

void setup()
{
   Serial.begin(9600);
  Serial.println("ex-standing waves start1");
  myservo0.attach(9);   delay(10);   // attaches the servo on pin 9 to the servo object
  
  myservo1.attach(3);   delay(10);  // attaches the servo on pin 9 to the servo object
  myservo2.attach(5);   delay(10);  // attaches the servo on pin 9 to the servo object
  myservo3.attach(6);   delay(10);  // attaches the servo on pin 9 to the servo object

  rf12_initialize('R', RF12_868MHZ, 212);

  Serial.println("ex-standing waves start2");
  //servoLoop();
  
  vibrating();//back
}

void loop()
{

  if ( Serial.available()){
    
       
       int h = Serial.read();
       if ( h == '1') excitement();
        if ( h == '2') vibrating();
        if ( h == '3') wave();
          if ( h == '4') wave2();
          if ( h == '5' ) wave3();
       Serial.println("vibrate from serial");
       
       
       
  }
  
  
  char* buf = (char*) rf12_data;

  if (rf12_recvDone() && rf12_crc == 0) {
    
    Serial.println("friend sees data");
    int check = 0;
    int counter = 0;
    int i = 0;
    while ( i < 30 )
    {
      if ( buf[i] == 'e' ) {
        if ( buf[i+1] == 'x') { 
          Serial.println("ex-standing waves");
           if ( buf[i+2] == '0') {//front
           if ( buf[i+3] == 'v') vibrating();
           if ( buf[i+3] == 'e') excitement();
           }
             if ( buf[i+2] == '1') {//back
           if ( buf[i+3] == 'v') vibrating();
           if ( buf[i+3] == 'e') excitement();
           }
        }
      }
      i++;
    }
  }
}

void servoLoop(){
  for (pos = 0; pos <= 180; pos += 10) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    doServoPos(pos);
  }
  for (pos = 180; pos >= 0; pos -= 10) // goes from 180 degrees to 0 degrees
  {
    doServoPos(pos);
  }
}

void doServoPos(int pos){
 // myservo0.write(pos);              // back 4 //front bottom right
  delay(25);                       // waits 15ms for the servo to reach the position
//  myservo1.write(pos);              // back 3 // front upper let
  delay(25);
  myservo2.write(pos);              //back 2  //front upper right
  delay(25);
 // myservo3.write(pos);              // back 1 //front bottom left
  delay(25);
}



void excitement() {
  int stepPos = 5;
  int nDelay = 20;
  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo0.write(180 - pos);
    myservo1.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo0.write(180 - pos);
    myservo1.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }

  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo1.write(180 - pos);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo1.write(180 - pos);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }

  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo2.write(180 - pos);
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo2.write(180 - pos);
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }

}

void vibrating() {

  int myDel_short = 20;

  for ( int i = 0; i < 10; i++) {

    if ( (i % 2) == 0 ) 
      pos = 30; 
    else pos = 150;
    
    myservo0.write(pos);
    delay(myDel_short);
    myservo1.write(pos);
    delay(myDel_short);
    myservo2.write(pos);
    delay(myDel_short);
    myservo3.write(pos);
    delay(myDel_short);
  }
}

void wave() {
  int stepPos = 5;
  int nDelay = 20;
  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo0.write(180 - pos);delay(10); 
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo0.write(180 - pos);delay(10);
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
   for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo1.write(180 - pos);delay(10);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo1.write(180 - pos);delay(10);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
}

void wave2() {
  int stepPos = 5;
  int nDelay = 20;
  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo0.write(pos);delay(10); 
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo0.write(pos);delay(10);
    myservo3.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
   for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo1.write(pos);delay(10);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
    myservo1.write(pos);delay(10);
    myservo2.write(pos);              // tell servo to go to position in variable 'pos'
    delay(nDelay);                      // waits 15ms for the servo to reach the position
  }
}

void wave3() {
  int stepPos = 2;
  int nDelay = 20;
  for (pos = 0; pos <= 180; pos += stepPos) // goes from 0 degrees to 180 degrees
  { // in steps of 1 degree
    myservo0.write(pos);delay(10); 
    myservo3.write(pos);delay(10);                            
    myservo1.write(pos);delay(10);
    myservo2.write(pos);delay(10);                              
  }
  for (pos = 180; pos >= 0; pos -= stepPos) // goes from 180 degrees to 0 degrees
  {
     myservo0.write(pos);delay(10); 
    myservo3.write(pos);delay(10);                            
    myservo1.write(pos);delay(10);
    myservo2.write(pos);delay(10);   
  }
}



